// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets   = ["linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(uuid())
  name           String
  password       String
  email          String   @unique
  avatar         String?
  created_at     DateTime @default(now())
  
  @@map("users")
}

model Transaction {
  id             String @id @default(uuid())
  description    String
  type           String
  category       String
  price          Float
  created_at     DateTime @default(now())

  @@map("transactions")
}